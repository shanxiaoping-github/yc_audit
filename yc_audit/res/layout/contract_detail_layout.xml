<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor"
    android:orientation="vertical" >

    <TextView
        style="@style/title_bar"
        android:text="合同详情" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/contract_brief_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/lightBlue" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/contract_terms_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/diver" />

            <ListView
                android:id="@+id/contract_detail_product_listview"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:background="@color/white" >
            </ListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/diver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目中标结果"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/contract_post_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击查看"
                    android:textColor="@drawable/text_blue_to_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/diver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同文件"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/contract_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载合同"
                    android:textColor="@drawable/text_blue_to_gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/contract_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="点击查看"
                    android:textColor="@drawable/text_black_to_gray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/lightBlue" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核结果"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/contract_audit_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通过"
                    android:textColor="@color/lightRed"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/diver" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审核意见:"
                    android:textColor="@color/lightGray"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/contract_audit_opinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:text="我觉得应该怎样怎样"
                    android:textColor="@color/shallowGray"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/diver" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>